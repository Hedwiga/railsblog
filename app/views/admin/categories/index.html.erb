<h1><%= t('.title') %></h1>

<div class="buttons_panel">
    <%= link_to t('.newCategory'), new_admin_category_path, class: 'btn btn-outline-primary btn-sm' %>
</div>

<section id='posts'>
    <table class='table'>
        <thead>
            <tr>
                <th>#</th>
                <th><%= t('.name') %></th>
                <th><%= t('.parent_id') %></th>
            </tr>
        </thead>
        <tbody>
        <% @categories.each_with_index do |category, index| %>
            <tr>
                <td><%= index + 1%></td>
                <td><%= category.name %></td>
                <td><%= category.name if category.parent.present? %></td>
                <td>
                    <%= link_to t('common.edit'), edit_admin_category_path(category), class: 'btn btn-outline-primary btn-sm' %>
                    <%= link_to t('common.delete'), admin_category_path(category), method: :delete, data: { confirm: t('common.confirmation') }, class: 'btn btn-outline-danger btn-sm' %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</section>
